<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<DialogPane minHeight="-Infinity" prefHeight="400.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="sample.NewContactDialogController">
    <content>
        <GridPane hgap="10" vgap="10">
            <Label text="First and last names: " GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="nameInputField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <ToggleButton fx:id="isFavouriteButton" text="Add to Favourites" GridPane.columnIndex="2" GridPane.rowIndex="0" />
            <Label text="Number: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="numberInputField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Notes: " GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextArea fx:id="descriptionInputField" text="Notes" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Button fx:id="changePictureButton" onAction="#handleChangingImage" text="Change Picture" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <ImageView fx:id="contactImagePreview" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </content>

</DialogPane>
