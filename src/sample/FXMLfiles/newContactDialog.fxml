<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.ToggleButton?>
<DialogPane fx:controller="sample.NewContactDialogController"
            xmlns:fx="http://javafx.com/fxml">
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="First and last names: " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameInputField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <ToggleButton fx:id="isFavouriteButton" GridPane.rowIndex="0" GridPane.columnIndex="2" text="Add to Favourites"/>
            <Label text="Number: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="numberInputField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Notes: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextArea fx:id="descriptionInputField" GridPane.rowIndex="2" GridPane.columnIndex="1" wrapText="true" text="Notes"/>
            <Button fx:id="changePictureButton" GridPane.rowIndex="3" GridPane.columnIndex="0" onAction="#handleChangingImage"/>
            <ImageView fx:id="contactImagePreview" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>
    </content>

</DialogPane>