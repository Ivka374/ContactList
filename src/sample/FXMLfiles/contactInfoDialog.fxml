<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<DialogPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ContactInfoController">

   <content>
      <VBox>
         <ImageView fx:id="contactImageView" fitHeight="254.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" />
         <Label fx:id="name" text="Name">
            <font>
               <Font size="20.0" />
            </font>
            <VBox.margin>
               <Insets left="30.0" top="10.0" />
            </VBox.margin>
         </Label>
         <Label fx:id="number" text="Number">
            <VBox.margin>
               <Insets left="30.0" top="10.0" />
            </VBox.margin>
            <font>
               <Font size="20.0" />
            </font>
         </Label>
         <TextArea fx:id="notesDisplay" editable="false" prefHeight="200.0" prefWidth="200.0">
            <VBox.margin>
               <Insets left="20.0" right="20.0" />
            </VBox.margin>
         </TextArea>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <Button fx:id="editButton" mnemonicParsing="false" onAction="#handleEditContact" text="Edit">
               <font>
                  <Font size="15.0" />
               </font>
               <HBox.margin>
                  <Insets left="30.0" right="15.0" top="30.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="callButton" mnemonicParsing="false" text="Call">
               <font>
                  <Font size="15.0" />
               </font>
               <HBox.margin>
                  <Insets left="15.0" right="15.0" top="30.0" />
               </HBox.margin>
            </Button>
            <Label fx:id="favouriteLabel" text="Favourite">
               <HBox.margin>
                  <Insets left="15.0" right="15.0" top="30.0" />
               </HBox.margin>
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </HBox>
      </VBox>
   </content>

</DialogPane>
